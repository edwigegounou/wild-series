{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de série</h1>
        {% for category in categories %}
            <ul>
                <li>
                   {{ category.name }}
                    <br>
                    <a class="lien" href="{{ path("category_show", {categoryName : category.name}) }}">Voir la fiche</a>
                </li>
            </ul>
            {% else %}
            Aucune catégorie trouvée
        {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}