{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries : </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>search</button>
    {{ form_end(form) }}

    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a class="lien" href="{{ path("program_show", { "slug": program.slug}) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a class="lien" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
